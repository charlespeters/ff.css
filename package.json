{
  "name": "ff.css",
  "version": "0.0.3",
  "description": "A collection of `font-family` utilities with the BEM `.u-` prefix.",
  "main": "index.css",
  "browser": "./dist/ff.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bundle": "postcss -u postcss-custom-properties -o ./dist/ff.css ./index.css",
    "re:bundle": "postcss -c .postcss.json",
    "lint": "stylelint ./index.css",
    "prepublish": "npm run bundle"
  },
  "author": "charles peters <charlespeters42@gmail.com> (https://charlespeters.net)",
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^3.7.4",
    "postcss-cli": "^2.6.0",
    "postcss-custom-properties": "^5.0.1",
    "postcss-export-vars": "^0.2.0",
    "postcss-reporter": "^1.4.1",
    "stylelint": "^7.2.0",
    "stylelint-config-wilco": "^1.0.2"
  },
  "stylelint": {
    "extends": "stylelint-config-wilco"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlespeters/ff.css.git"
  },
  "keywords": [
    "css",
    "typography",
    "font-families",
    "system",
    "fonts"
  ],
  "bugs": {
    "url": "https://github.com/charlespeters/ff.css/issues"
  },
  "homepage": "https://github.com/charlespeters/ff.css#readme"
}
