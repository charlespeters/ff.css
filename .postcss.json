{
  "use": [
    "postcss-export-vars",
    "postcss-custom-properties",
    "cssnano",
    "postcss-reporter"
  ],
  "input": "./index.css",
  "output": "./dist/ff.css",
  "local-plugins": true,
  "postcss-export-vars": {
    "file": "families",
    "type": "json",
    "matches": []
  },
  "cssnano": {
    "filterPlugins": false,
    "autoprefixer": false,
    "mergeRules": false,
    "discardEmpty": true,
    "discardComments": {
      "removeAllButFirst": true
    }
  },
  "postcss-reporter": {
    "clearMessages": true
  }
}
